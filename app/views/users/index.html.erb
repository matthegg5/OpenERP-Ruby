<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag "user-admin", media: "all" %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= @title %></title>
</head>     
<body>
  <section class="showcase">
    <header>
        <h2 class="logo"><%= @title %></h2>
        <div class="toggle"></div>
    </header>
  
    <%= video_tag 'user-admin-background.mp4', controls: false, autoplay: true, loop: true, muted: true %>
    <div class="overlay"></div>
    
    <div class="notice"><%= notice %></div>
    <div class="alert"><%= alert %></div> 

    <div>
      <div class="text"> <%= link_to 'New User', new_user_path %> </div>
    </div>
    
    <table>
      <thead>
        <tr>
          <th class="text">Username</th>
          <th colspan="3" class="text">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
              <td class="text"><%= user.username %></td>
              <td class="text">
                <%= link_to 'Show', user  %>
              </td>
              <td class="text">
                <%= link_to 'Edit', edit_user_path(user) %>
              </td>
              <td class="text">
                <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>   
  </section>
</body>
</html>

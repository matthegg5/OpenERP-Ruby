<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag "login", media: "all" %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= @title %></title>
</head>     
<body>
    <section class="showcase">
    <header>
        <h2 class="logo"><%= @title %></h2>
        <div class="toggle"></div>
    </header>
        <div asp-validation-summary="ModelOnly"></div>
        <%= video_tag 'Login-background.mp4', controls: false, autoplay: true, loop: true, muted: true %>
        <div class="overlay"></div>
    <%= form_for(:user, url: user_session_path, method: :post) do |f| %>
    <div class="loginFormArea">
        <div class="text">
        <%= f.label :username, "Username:" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
        </div>

        <div class="text">
        <%= f.label :password, "Password:" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        </div>
        <div class="text">
        <%= f.submit "Login", class: "submitButton" %>
        </div>
        <div class="text"><%= notice %></div>
        <div class="text"><%= alert %></div>
    </div>
    <% end %>
    </section>
</body>
</html>
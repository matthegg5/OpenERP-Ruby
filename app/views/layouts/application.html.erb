<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag "site", media: "all" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
    <%= javascript_importmap_tags %>
</head>    

<body>
  <!-- Main content rendered by yield or action -->
  <%= yield %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <!-- Menu -->
  <div class="menu">
    <ul>
      <li><%= link_to 'Home', root_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Login', new_user_session_path %></li>
      <% end %> 
      <li>
        <a href="#" class="menu-link">MES</a>
        <ul class="submenu">
          <li class="submenu-item"><a href="#">Employee Booking</a></li>
          <li class="submenu-item"><a href="#">Production Management</a></li>
        </ul>
      </li>
      <li><%= link_to 'Part', part_path %></li>
      <li><%= link_to 'Games', games_path %></li>
    </ul>
  </div>  

  <!-- example extension to sub-menu  -->

<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag "index", media: "all" %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= @title %></title>
</head>    
<body>
    <section class="showcase">
    <header>
        <h2 class="logo"><%= @title %></h2>
        <div class="toggle"></div>
    </header>
    <%= form_with(url: part_create_path, method: :post) do |form| %>
    <div>
        <div class="notice"><%= notice %></div>
        <div class="alert"><%= alert %></div>
    </div>

    <div class="text">
        <h3>Part</h3>
    </div>

    <div class="text">
        <%= form.label :company_id, 'CompanyId' %>
        <%= form.text_field :company_id, value: @current_company.to_s.upcase %>
    </div>

    <div class="text">
        <%= form.label :part_num, 'Part Number' %>
        <%= form.text_field :part_num %>
    </div>

    <div class="text">
        <%= form.label :part_description, 'Part Description' %>
        <%= form.text_field :part_description %>
    </div>

    <div class="text">
        <%= form.label :serial_tracked, 'Track Serial Numbers' %>
        <%= form.check_box :serial_tracked %>
    </div>

    <div class="text">
        <%= form.label :default_uom, 'Default Unit of Measure' %>
        <%= form.text_field :default_uom %>
    </div>

    <div class="text">
        <%= form.submit 'Create', class: 'submitButton' %>
    </div>

    <% end %>    
    </section>
</body>
</html>